using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class NewBehaviourScript : MonoBehaviour
{

  public float speed = 1.0f;
  
    void Start(){  
    }
    
    void Update()
    {
       animation["PlayerAnimationController"].speed = speed;
       animation["PlayerAnimationController"].wrapmode = Wrapmode.Loop;
       }
       
   }

